{
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/mailpoet/html2text"
    },
    {
      "type": "vcs",
      "url": "https://github.com/mailpoet/swiftmailer"
    },
    {
      "type": "vcs",
      "url": "https://github.com/costasovo/mozart"
    }

  ],
  "require": {
    "php": ">=5.5",
    "twig/twig": "1.*",
    "cerdic/css-tidy": "^1.6",
    "tburry/pquery": "^1.1.1",
    "j4mie/paris": "1.5.6",
    "swiftmailer/swiftmailer": "dev-tls",
    "mtdowling/cron-expression": "^1.1",
    "nesbot/carbon": "^1.21",
    "soundasleep/html2text": "dev-master",
    "sabberworm/php-css-parser": "^8.1",
    "symfony/polyfill-php72": "^1.9",
    "symfony/polyfill-mbstring": "^1.9",
    "sensiolabs/security-checker": "^5.0",
    "monolog/monolog": "^1.23",
    "league/container": "2.4.1"
  },
  "require-dev": {
    "codeception/aspect-mock": "2.0.1",
    "goaop/framework": "2.1.2",
    "codeception/codeception": "2.4.2",
    "codeception/verify": "^0.4.0",
    "consolidation/robo": "^1.3.0",
    "henrikbjorn/lurker": "^1.2",
    "lucatume/wp-browser": "1.24.5",
    "phpunit/phpunit": "5.7.27",
    "vlucas/phpdotenv": "^2.4.0",
    "umpirsky/twig-gettext-extractor": "1.1.*",
    "kint-php/kint": "^3.0",
    "squizlabs/php_codesniffer": "^3.3",
    "phpcompatibility/php-compatibility": "^9.0",
    "coenjacobs/mozart": "dev-dependency-tree"
  },
  "autoload": {
    "psr-4": {
      "MailPoet\\": "lib/",
      "Sudzy\\": "lib/Util/Sudzy"
    }
  },
  "scripts": {
    "post-update-cmd": [
      "\"vendor/bin/mozart\" compose",
      "rm -rf vendor/monolog",
      "rm -rf vendor/league/container",
      "@fixPHPUnit57CodeCoverageForPHP72"
    ],
    "post-install-cmd": [
      "\"vendor/bin/mozart\" compose",
      "rm -rf vendor/monolog",
      "@fixPHPUnit57CodeCoverageForPHP72"
    ],
    "fixPHPUnit57CodeCoverageForPHP72": "sed -i -- 's/\\$numTests = count(\\$coverageData\\[\\$i\\]);/$numTests = (is_array($coverageData[$i]) ? count($coverageData[$i]) : 0);/g' vendor/phpunit/php-code-coverage/src/Report/Html/Renderer/File.php"
  },
  "extra": {
    "mozart": {
      "dep_namespace": "MailPoet\\Dependencies\\",
      "dep_directory": "/lib/Dependencies/",
      "classmap_directory": "/classes/dependencies/",
      "classmap_prefix": "MP_",
      "packages": [
        "monolog/monolog",
        "league/container"
      ]
    }
  },
  "config": {
    "platform": {
      "php": "5.6.30"
    }
  }
}
